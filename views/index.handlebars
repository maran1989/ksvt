<form class="" action="keywords/content" method="post">
  <div class="w3-container w3-white w3-padding-16 myLink" style="display: block;">
    <h3>Get your Keyword Stats</h3>
    <div class="w3-row-padding" style="margin:0 -16px;">
      <div class="w3-col" style="width: 10%;"><p></p></div>
      <div class="w3-col" style="width: 80%;">
        <textarea class="w3-input w3-border" rows="20" id="keywords" name="keywords" placeholder="Enter Keywords"></textarea>
        <input type="file" id="excel_file" name="excel_file" style="display:none" accept="application/vnd.openxmlformats-officedocument.spreadsheetml.sheet"/>
        <p><button id="uploadfile" class="w3-input w3-border" type="button" onclick="uploadFile()">Upload a File</button></p>
        <select class="w3-input w3-border" name="location">
          <option value="" disabled selected>Choose your location</option>
          {{#each locations}}
          <option value={{id}}>{{name}}</option>
          {{/each}}
        </select>
      </div>
      <div class="w3-col" style="width: 10%;">
        <p></p>
      </div>
    </div>
  </div>
  <div class="w3-panel w3-pale-red">
    <div style="padding: 5px;"></div>
    <p>Multiple keywords will be read per line.</p>
  </div>
  <p><button class="w3-button w3-dark-grey" type="submit">Generate Keyword</button></p>
  </div>
</form>
